    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="284*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="68*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="68*"/>
            <RowDefinition Height="68*"/>
            <RowDefinition Height="68*"/>
            <RowDefinition Height="75*"/>
            <RowDefinition Height="68*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="68*"/>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="90*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#FF302F3E" Margin="0" Grid.Row="1" />
